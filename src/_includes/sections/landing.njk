<!-- LANDING -->
<section class="relative ~px-4/8 pt-60 pb-16 bg-background z-10">
  <div class="container m-auto flex flex-col items-start gap-6">
    <!-- HEADING -->
    <span class="text-white text-4xl font-bold leading-none">
      {{ title }}
    </span>

    <!-- BREADCRUMBS -->
    <ul class="flex flex-wrap justify-center items-center ~gap-2/4">
      {% for item in landing.breadcrumbs %}
        {% if item.url %}
          <li>
            <a href="{{ item.url }}" class="text-stone-200 hover:text-white">{{ item.title }}</a>
          </li>

          {# Show the chevron icon if this is not the last item #}
          {% if loop.index != landing.breadcrumbs.length %}
            <li class="text-stone-200">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.9,8.8L6.5,5.3l0.8-0.8l4.2,4.2L7.3,13l-0.8-0.8L9.9,8.8z"/>
              </svg>
            </li>
          {% endif %}

        {% else %}
          {# Show the chevron icon if this is not the last item #}
          {% if loop.index != landing.breadcrumbs.length %}
            <li class="text-stone-200">{{ item.title }}</li>

            <li class="text-stone-200">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.9,8.8L6.5,5.3l0.8-0.8l4.2,4.2L7.3,13l-0.8-0.8L9.9,8.8z"/>
              </svg>
            </li>
          {% else %}
            <li class="text-white line-clamp-1">{{ item.title }}</li>
          {% endif %}
        {% endif %}
      {% endfor %}
    </ul>
  </div>

  <!-- BACKGROUND -->
  <img
    class="absolute top-0 right-0 h-full w-auto object-cover opacity-50 -z-10"
    src="/assets/svgs/landing/TS-Ká_landing.svg"
    alt="Pozadí úvodní sekce"
    decoding="async"
    loading="lazy"
    width="436"
    height="436"
    draggable="false"/>
</section>