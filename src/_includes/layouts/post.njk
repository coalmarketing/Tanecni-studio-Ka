{% extends "layouts/base.njk" %}

{% block head %}
    <!-- To ensure proper validation, prevent errors, and encourage developers to check, schema's are an opt-in feature. They're very bespoke and requires some customising  -->
    <!-- Uncomment the code below to enable Structured Data, and test it when you deploy to Netlify - https://developers.google.com/search/docs/appearance/structured-data -->
    {% include "components/post-schema.njk" %}
{% endblock %}

{% block body %}
    {% include "sections/landing.njk" %}

    <article class="~px-4/8 py-24 bg-white dark:bg-stone-900">
        <div class="container m-auto flex flex-col items-center ~gap-8/16">
            <picture>
                <!-- MOBILE IMAGE -->
                <source media="(max-width: 600px)" srcset="{% getUrl image | resize({ width: 736, height: 490 }) | avif %}" type="image/avif">
                <source media="(max-width: 600px)" srcset="{% getUrl image | resize({ width: 736, height: 490 }) | webp %}" type="image/webp">
                <source media="(max-width: 600px)" srcset="{% getUrl image | resize({ width: 736, height: 490 }) | jpeg %}" type="image/jpeg">
                <!-- TABLET IMAGE -->
                <source media="(max-width: 1024px)" srcset="{% getUrl image | resize({ width: 1524, height: 1016 }) | avif %}" type="image/avif">
                <source media="(max-width: 1024px)" srcset="{% getUrl image | resize({ width: 1524, height: 1016 }) | webp %}" type="image/webp">
                <source media="(max-width: 1024px)" srcset="{% getUrl image | resize({ width: 1524, height: 1016 }) | jpeg %}" type="image/jpeg">
                <!-- DESKTOP IMAGE -->
                <source media="(min-width: 1024px)" srcset="{% getUrl image | resize({ width: 1792, height: 1194 }) | avif %}" type="image/avif">
                <source media="(min-width: 1024px)" srcset="{% getUrl image | resize({ width: 1792, height: 1194 }) | webp %}" type="image/webp">
                <source media="(min-width: 1024px)" srcset="{% getUrl image | resize({ width: 1792, height: 1194 }) | jpeg %}" type="image/jpeg">
                <img
                    class="object-cover rounded-4xl"
                    src="{% getUrl image | resize({ width: 1792, height: 1194 }) | jpeg %}"
                    alt="{{ imageAlt }}"
                    width="896"
                    height="597"
                    loading="lazy"
                    decoding="async"
                    aria-hidden="true"
                    draggable="false">
            </picture>

            <!-- BLOG POST -->
            <section class="flex flex-col gap-8 w-full max-w-[75ch]">
                <div class="flex flex-col gap-2">
                    <!-- BLOG TITLE -->
                    <h1 class="~text-3xl/5xl text-black dark:text-white font-bold !leading-[1.1]">{{ title }}</h1>

                    <!-- BLOG METADATA -->
                    <span class="text-sm text-slate-700 dark:text-slate-300 font-medium">{{ date | postDate }}</span>
                </div>

                <!-- BLOG TEXT -->
                <div class="prose prose-stone dark:prose-invert">
                    {{ content | safe }}
                </div>
            </section>

        </div>
    </article>

{% endblock %}