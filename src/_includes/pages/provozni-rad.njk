{% extends "layouts/base.njk" %}

{% block body %}
    {% include "sections/landing.njk" %}

    <!-- GDPR -->
    <section class="py-24 ~px-4/8 bg-white dark:bg-stone-950">
        <div class="container m-auto flex flex-col gap-8">
            <!-- TOPPER + HEADING -->
            <div class="flex flex-col items-start gap-2">
                <span class="topper">{{ contentOne.topper }}</span>
                <h2 class="~text-3xl/5xl text-black dark:text-white font-bold !leading-[1.1]">{{ contentOne.heading }}</h2>
            </div>

            <div class="max-w-[75ch]">
                {% for item in contentOne.items %}
                    <div class="mb-6">
                        {% if item.heading %}
                            <h3 class="dark:text-white ~text-xl/2xl font-semibold mb-4">{{ item.heading }}</h3>
                        {% endif -%}

                        {%- if item.text %}
                            {% for text in item.text %}
                                <p class="~text-sm/base text-stone-800 dark:text-stone-200 mb-2">{{ text.paragraph | safe }}</p>
                            {% endfor %}
                        {% endif -%}

                        {%- if item.subitems %}
                            <ul class="list-disc max-w-2xl space-y-1 ml-8">
                                {% for subitem in item.subitems %}
                                    <li class="font-work-sans text-stone-800 dark:text-stone-200">{{ subitem.text }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock body %}