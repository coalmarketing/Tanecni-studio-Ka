{% extends "layouts/base.njk" %}

{% block head %}
    <script defer src="/assets/js/fslightbox.js"></script>
{% endblock %}

{% block body %}
    {% include "sections/landing.njk" %}

    {# Loop over the latest (reverse) blog posts #}
    {% for album in collections.gallery | reverse %}
        {# Check if the gallery album has any photos #}
        {% if album.data.images | length > 0 %}
            <section class="py-24 ~px-4/8 odd:bg-white dark:odd:bg-stone-900 even:bg-stone-100 dark:even:bg-stone-950">
                <div class="container m-auto flex flex-col ~gap-4/8">
                    <span class="~text-2xl/3xl dark:text-white font-bold line-clamp-1">{{ album.data.title }}</span>

                    <!-- GALLERY PHOTOS -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-6 gap-4">
                        {% for image in album.data.images %}
                            <!-- IMAGE -->
                            <a data-fslightbox="{{ album.fileSlug }}" href="{% getUrl image.url | rotate | resize({ height: 1944 }) | jpeg %}">
                                <picture>
                                    <source media="(min-width: 600px)" srcset="{% getUrl image.url | rotate | resize({ width: 486, height: 486 }) | avif %}" type="image/avif">
                                    <source media="(min-width: 600px)" srcset="{% getUrl image.url | rotate | resize({ width: 486, height: 486 }) | webp %}" type="image/webp">
                                    <source media="(min-width: 600px)" srcset="{% getUrl image.url | rotate | resize({ width: 486, height: 486 }) | jpeg %}" type="image/jpeg">
                                    <img
                                        class="object-cover w-full aspect-square rounded-xl"
                                        src="{% getUrl image.url | rotate | resize({ width: 486, height: 486 }) | jpeg({ quality: 70 }) %}"
                                        alt="{% if image.alt -%} image.alt {%- else -%} Fotografie {{ album.data.title }}-{{ loop.index }} {%- endif %}"
                                        decoding="async"
                                        loading="lazy"
                                        width="243"
                                        height="243"
                                        draggable="false"/>
                                </picture>
                            </a>
                        {% endfor %}
                    </div>

                    {% if album.data.url %}
                        <!-- CTA BUTTON -->
                        <a class="btn" href="{{ album.data.url }}" target="_blank">
                          Zobrazit v≈°e
                        </a>
                    {% endif %}
                </div>
            </section>
        {% endif %}
    {% endfor %}

{% endblock body %}